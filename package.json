{
  "name": "prism",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "supabase"
  ],
  "scripts": {
    "dev:web": "pnpm --filter @prism/web dev",
    "dev:api": "pnpm --filter @prism/api dev",
    "dev:cli": "pnpm --filter @prism/cli dev",
    "dev:web-next": "pnpm --filter @prism/web-next dev",
    "build:web-next": "pnpm --filter @prism/web-next build",
    "start:web-next": "pnpm --filter @prism/web-next start",
    "build": "pnpm -r run build",
    "migrate": "pnpm --filter @prism/api migrate",
    "seed": "pnpm --filter @prism/api seed",
    "lint": "echo 'add lints here'",
    "smoke": "node scripts/smoke.cjs"
  }
}
